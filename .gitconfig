[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
[alias]
  cp = cherry-pick
  ss = stash save
  sl = stash list
	rb = rebase
	rbc = rebase --continue
	rba = rebase --abort
	rbi = rebase -i
	b = branch
	new = checkout -b
	fix = commit --amend
	dq = difftool HEAD^ HEAD
	d = difftool
	st = status
	pr = pull --rebase
	co = checkout
	search = "!f() { git grep -In $1 -- $2; }; f"
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[user]
	name = Jamie Lottering
	email = jamielottering@gmail.com
[push]
	default = simple
[color]
	ui = auto

[color "branch"]
	current = yellow reverse
  	local = yellow
  	remote = green
[color "diff"]
  	meta = yellow bold
  	frag = magenta bold
  	old = red bold
  	new = green bold
[color "status"]
  	added = yellow
  	changed = green
  	untracked = cyan